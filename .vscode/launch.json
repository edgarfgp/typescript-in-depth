    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229
        },
        {
            "type": "node",
            "request": "launch",
            "stopOnEntry": false,
            "name": "DEBUG",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": true,
            "program": "${workspaceFolder}/app.ts",
            "outFiles": [
                "${workspaceFolder}/js/*.js"
            ]
        }
    ]
}